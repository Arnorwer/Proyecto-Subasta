<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="auction_product_view_form" model="ir.ui.view">
        <field name="name">auction.product.view.form</field>
        <field name="model">auction.product</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="product_id" />
                        <field name="price" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="auction_product_view_tree" model="ir.ui.view">
        <field name="name">auction.product.view.tree</field>
        <field name="model">auction.product</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="product_id" />
                <field name="price" />
            </tree>
        </field>
    </record>

    <record id="auction_product_action" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">auction.product</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
